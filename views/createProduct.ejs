<!DOCTYPE html>
<html lang="en">

	<%- include("partials/head.ejs", {title: 'Crear producto'}) %> 


<body>

	<%- include("partials/header.ejs") %>

		<div class="contain-main">

			<section class="create-section">


				<div class="h2-div">

					<h2>Formulario de creación de productos</h2>


					<img class="img-createProduct" src="/images/Logo San José para pared2.png" alt="Imagen del logo">

				</div>

			</section>


			<%if (locals.errors) {%>
				<div class="mensaje-error">
					<%= errors.msg %>
				</div>
			<% } %>	

			<form  id="createProductForm" class="form-create" action="/productos/createProduct"  method="POST" enctype="multipart/form-data">

				<div id="errors-div" hidden>
					
				</div>

				<div class="control-form">

					<label for="name">Nombre del producto:</label>
					<input type="text" placeholder="Maria Luisa" name="nombre" id="name" class="control" >
					<%if (locals.errors && errors.nombre) {%>
						<div class="mensaje-error">
							<%= errors.nombre.msg %>
						</div>
					<% } %>
				</div>

				<div class="control-form">

					<label for="price">Precio del producto:</label>
					<input type="text" placeholder="EJ: $30.000" name="precio" id="price" class="control" >
					<%if (locals.errors && errors.precio) {%>
						<div class="mensaje-error">
							<%= errors.precio.msg %>
						</div>
					<% } %>
				</div>
				

				<div class="control-form">

					<label for="image1">Imagenes del producto:</label>
					<input type="file" placeholder="Jose Sanchez" name="imagen" multiple id="image1" class="control-img">
					<% if (locals.errors && errors.imagen) { %>
						<div class="mensaje-error">
						 <%= errors.imagen.msg %>
						</div>

					  <% } %>
				</div>

				<div class="control-form">

					<label for="image2">Imagen 2 del producto:</label>
					<input type="file" placeholder="Jose Sanchez" name="imagen" id="image2" class="control-img">
					<% if (locals.errors && errors.imagen) { %>
						<div class="mensaje-error">
						 <%= errors.imagen.msg %>
						</div>

					  <% } %>
				</div>

				<div class="control-form">

					<label for="image3">Imagen 3 del producto:</label>
					<input type="file" placeholder="Jose Sanchez" name="imagen" id="image3" class="control-img">
					<% if (locals.errors && errors.imagen) { %>
						<div class="mensaje-error">
						 <%= errors.imagen.msg %>
						</div>

					  <% } %>
				</div>

				<div class="control-form">

					<label for="size">Tamaño del producto:</label>
					<input type="text" placeholder="EJ: 15" name="tamanio" id="size" class="control" >
					<% if (locals.errors && errors.tamanio) { %>
						<div class="mensaje-error">
						 <%= errors.tamanio.msg %>
						</div>

					  <% } %>
				</div>

				<div class="control-form">

					<label for="category">Categoria</label>
					<select name="categoria" id="category" class="control" >
						<% for (let i = 0; i < categorias.length; i++) { %>
							<% if (categorias[i].idCategorias == productos.categorias_id) {%>

								<option value="<%=categorias[i].idCategorias%>" selected>
									<%=categorias[i].categoria%>
								</option>

							<% } else { %>

								<option value="<%=categorias[i].idCategorias%>">
									<%=categorias[i].categoria%>
								</option>

							<% } %>

						<% } %>
					</select>
					
				</div>

				<div class="control-form">
					<label for="description" class="form-label">Descripción:</label>
					<textarea name="descripcion" id="description" class="area-fieldc"></textarea>
					<% if (locals.errors && errors.descripcion) { %>
						<div class="mensaje-error">
						 <%= errors.descripcion.msg %>
						</div>

					  <% } %>
				</div>

				<div class="button-formc">

					<button type="submit">Guardar producto</button>

				</div>

				<div class="button-formc2">

					<button type="submit"><a href="/Productos/editarProduct/0">¿Deseas editar algun
							producto?</a></button>

				</div>


			</form>


		</div>

		<script src="/js/createProductValidation.js"></script>


		<%- include("partials/footer.ejs") %>

</body>

</html>