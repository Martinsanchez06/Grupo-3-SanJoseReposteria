<!DOCTYPE html>
<html lang="en">

<%- include("partials/head.ejs", {title: 'Lista de productos' }) %>

    <body>
        <!--Header-->
        <%- include("partials/header.ejs") %>

            <!--Main-->
            <main class="mb-4">
                <div class="view-title p-2 ps-4">
                    <h1 class="fs-6 mb-0 text-muted">| Tortas y postres</h1>
                </div>
                <div class="w-100 mt-3">
                    
                    <button class="btn ms-4"><i class="fas fa-filter"></i> Filtrar</button>
                    
                </div>
                <section class="lista">
                    <% if (locals.usuarioAdmin) { %>
                        <% productos.forEach(productos=> { %>
                        <%- include("product.ejs", {productos : productos}) %>
                        <% }) %>
                    <% } else { %>
                        <% productos.forEach(productos=> { %>
                        <%- include("productoUsuario.ejs", {productos : productos}) %>
                        <% }) %>
                    <% } %>
                </section>
            </main>


            <!--Footer-->
            <%- include("partials/footer.ejs") %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

    </body>

</html>