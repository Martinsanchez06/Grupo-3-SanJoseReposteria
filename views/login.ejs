<!DOCTYPE html>
<html lang="en">

    <%- include("partials/head.ejs", {title: 'Login'}) %> 


<body>

    <%- include("partials/header.ejs") %>

        <div class="contain-main">

            <div class="div-desktop">
                <section class="ingreso">


                    <div class="control-form">

                        <h3>Bienvenido(a), ingresa a tu cuenta</h3>

                    </div>



                    <form action="/user/login" method="POST" class="info-login">
                        <div class="control-form">
                            <div id="errors-div" hidden>

                            </div>
                        </div>
                        <div class="control-form">

                            <label for="email">Correo Electrónico:</label>
                            <input type="text" placeholder="example@example.com" name="email" id="email"
                                class="control">
                            <%if (locals.errors && errors.email) {%>
                                <div class="mensaje-error">
                                    <%= errors.email.msg %>
                                </div>
                            <% } %>
                        </div>

                        <div class="control-form">

                            <label for="password">Contraseña:</label>
                            <input type="password" placeholder="****" name="password" id="password" class="control">

                        </div>

                        <div class="button-form">

                            <button type="submit">
                                <span>INGRESAR</span>
                            </button>

                        </div>

                        <div class="div-olvidaste">

                            <a href="">
                                <h4>¿Olvidaste tu contraseña?</h4>
                            </a>

                        </div>

                        <div class="div-nuevo">

                            <a href="">
                                <h4>¿Eres nuevo?</h4>
                            </a>

                        </div>

                        <div class="button-form-a">

                            <a class="btn-form-a" href="/user/registro">
                                <span>CREA TU CUENTA</span>
                            </a>

                        </div>
                        

                    </form>

                </section>

            </div>
            
        </div>

        <!-- PIE DE PAGINA -->

        </section>
        <script src="/js/loginValidation.js"></script>
        <%- include("partials/footer.ejs") %>

</body>

</html>