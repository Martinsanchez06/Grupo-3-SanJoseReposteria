<article class="card">
    <div class="card-inner">
        <figure>
            <img class="img-card-up" src="/images/Productos/<%= productos.imagen_1 %>" alt="">
        </figure>
    </div>
    <div class="card-content">
        
        <h3 class="h3-product"><%= productos.nombre %></h3>

        <p class="p-product">precio: <span><%= productos.precio %></span></p>

        <p class="p-product">Tamaño: <span><%= productos.tamaño %></span></p>

        <div class="ver-detalle">

            <a class="ver-detalle" href="/productos/editarProduct/<%= productos.idProductos %>">Editar</a>


        </div>

        <div class="w-100">
            <button class="w-100 card-add-cart">
                <span> AGREGAR AL CARRITO</span>
            </button>
        </div> 
    </div>

</article>